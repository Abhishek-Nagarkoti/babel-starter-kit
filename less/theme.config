/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'rightfit';
@reset      : 'rightfit';

/* Elements */
@button     : 'chubby';
@container  : 'rightfit';
@divider    : 'rightfit';
@flag       : 'rightfit';
@header     : 'chubby';
@icon       : 'rightfit';
@image      : 'rightfit';
@input      : 'rightfit';
@label      : 'rightfit';
@list       : 'rightfit';
@loader     : 'rightfit';
@rail       : 'rightfit';
@reveal     : 'rightfit';
@segment    : 'rightfit';
@step       : 'rightfit';

/* Collections */
@breadcrumb : 'rightfit';
@form       : 'rightfit';
@grid       : 'rightfit';
@menu       : 'rightfit';
@message    : 'rightfit';
@table      : 'rightfit';

/* Modules */
@accordion  : 'rightfit';
@checkbox   : 'rightfit';
@dimmer     : 'rightfit';
@dropdown   : 'rightfit';
@embed      : 'rightfit';
@modal      : 'rightfit';
@nag        : 'rightfit';
@popup      : 'rightfit';
@progress   : 'rightfit';
@rating     : 'rightfit';
@search     : 'rightfit';
@shape      : 'rightfit';
@sidebar    : 'rightfit';
@sticky     : 'rightfit';
@tab        : 'rightfit';
@transition : 'rightfit';

/* Views */
@ad         : 'rightfit';
@card       : 'rightfit';
@comment    : 'rightfit';
@feed       : 'rightfit';
@item       : 'rightfit';
@statistic  : 'rightfit';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder  : 'site';


/*******************************
         Import Theme
*******************************/

@import "theme.less";

/* End Config */